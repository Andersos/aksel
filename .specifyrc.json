{
  "repository": "@nav/designsystem",
  "head": "updated-specify-tokens",
  "base": "specify-tokens",
  "rules": [
    {
      "name": "Colors",
      "path": "@navikt/ds-tokens/src/color.json",
      "filter": {
        "types": ["color"]
      },
      "parsers": [
        {
          "name": "sort-by",
          "options": {
            "keys": ["name"]
          }
        },
        {
          "name": "to-tailwind",
          "options": {
            "formatTokens": {
              "colorFormat": {
                "format": "hex"
              }
            },
            "formatConfig": {
              "module": "json"
            }
          }
        }
      ]
    }
  ]
}
